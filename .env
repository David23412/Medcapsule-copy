# MedCapsule Environment Configuration
# Generated for Production Launch

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="MedCapsule"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Africa/Cairo
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Current: SQLite (change to PostgreSQL for production)
DB_CONNECTION=sqlite
DB_DATABASE=/workspace/database/database.sqlite
DB_FOREIGN_KEYS=true

# For PostgreSQL production (recommended):
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=medcapsule_prod
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_secure_db_password

# =============================================================================
# CACHE & SESSION CONFIGURATION
# =============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
CACHE_PREFIX=medcapsule_cache
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="MedCapsule"

# For production SMTP (configure with your email provider):
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# =============================================================================
# PAYMENT SYSTEM CONFIGURATION (INTERNAL)
# =============================================================================
# **TODO**: Replace with your actual payment account details

# Vodafone Cash Wallet
VODAFONE_CASH_NUMBER=01XXXXXXXXX
VODAFONE_CASH_NAME="MedCapsule"

# Fawry Account  
FAWRY_NUMBER=FAWRY-XXXXXXXXX
FAWRY_NAME="MedCapsule"

# Bank Transfer / InstaPay
INSTAPAY_USERNAME=INSTAPAY-USERNAME
INSTAPAY_NAME="MedCapsule"

# Payment System Settings
PAYMENT_REFERENCE_EXPIRY_HOURS=24
ENABLE_PAYMENT_AUTO_VERIFICATION=true
PAYMENT_ADMIN_EMAIL=admin@your-domain.com

# Payment OCR Settings (receipt scanning)
PAYMENT_OCR_ENABLED=false
PAYMENT_OCR_APPROVAL_THRESHOLD=7
PAYMENT_OCR_ADMIN_REVIEW_THRESHOLD=4
PAYMENT_OCR_SAVE_PROCESSED_IMAGES=true
PAYMENT_OCR_ENHANCE_IMAGE=true

# Payment Verification Thresholds
PAYMENT_VERIFICATION_THRESHOLD=70
PAYMENT_EXPEDITED_REVIEW_THRESHOLD=40

# Admin Notifications
NOTIFY_ADMIN_ON_NEW_PAYMENT=true

# Payment Storage Management
PAYMENT_STORAGE_MANAGEMENT_ENABLED=true
PAYMENT_COMPRESS_ON_UPLOAD=true
PAYMENT_UPLOAD_COMPRESSION_QUALITY=85
PAYMENT_COMPRESSION_QUALITY=70

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Force HTTPS in production
FORCE_HTTPS=true

# Security Headers
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
MAX_UPLOAD_SIZE=5120
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,gif,pdf

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Error Reporting (optional - for production monitoring)
# SENTRY_LARAVEL_DSN=
# BUGSNAG_API_KEY=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
VIEW_COMPILED_PATH=/workspace/storage/framework/views
ROUTE_CACHE_PATH=/workspace/bootstrap/cache/routes-v7.php
CONFIG_CACHE_PATH=/workspace/bootstrap/cache/config.php

# Queue Settings
QUEUE_FAILED_DRIVER=database-uuids

# =============================================================================
# THIRD-PARTY SERVICES (OPTIONAL)
# =============================================================================
# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# DEVELOPMENT SETTINGS (DISABLE IN PRODUCTION)
# =============================================================================
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
HEALTH_CHECK_ENABLED=true

# Maintenance Mode
MAINTENANCE_DRIVER=file
MAINTENANCE_STORE=file