# MedCapsule Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="MedCapsule"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For production, use PostgreSQL or MySQL instead of SQLite
DB_CONNECTION=sqlite
DB_DATABASE=/workspace/database/database.sqlite

# For PostgreSQL (recommended for production):
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=medcapsule
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_secure_db_password

# For MySQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=medcapsule
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_secure_db_password

# =============================================================================
# BROADCASTING & CACHE
# =============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# For production with Redis (recommended):
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# For production with real SMTP (e.g., Gmail, SendGrid):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your-email@gmail.com
# MAIL_FROM_NAME="MedCapsule Support"

# =============================================================================
# PAYMENT SYSTEM CONFIGURATION (INTERNAL)
# =============================================================================
# **IMPORTANT**: Replace these with your actual payment account details

# Vodafone Cash Wallet
VODAFONE_CASH_NUMBER=01234567890
VODAFONE_CASH_NAME="MedCapsule"

# Fawry Account
FAWRY_NUMBER=FWY1234567890
FAWRY_NAME="MedCapsule"

# Bank Transfer / InstaPay
INSTAPAY_USERNAME=medcapsule_instapay
INSTAPAY_NAME="MedCapsule"

# Payment System Settings
PAYMENT_REFERENCE_EXPIRY_HOURS=24
ENABLE_PAYMENT_AUTO_VERIFICATION=true
PAYMENT_ADMIN_EMAIL=admin@your-domain.com

# Payment OCR Settings (for receipt scanning)
PAYMENT_OCR_ENABLED=false
PAYMENT_OCR_APPROVAL_THRESHOLD=7
PAYMENT_OCR_ADMIN_REVIEW_THRESHOLD=4

# Payment Verification Thresholds
PAYMENT_VERIFICATION_THRESHOLD=70
PAYMENT_EXPEDITED_REVIEW_THRESHOLD=40

# Admin Notifications
NOTIFY_ADMIN_ON_NEW_PAYMENT=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session Security
SESSION_COOKIE="${APP_NAME}_session"
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CSRF Protection
CSRF_COOKIE="${APP_NAME}_token"

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
# File Upload Settings
MAX_UPLOAD_SIZE=5120
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,gif,pdf

# Storage Settings
PAYMENT_STORAGE_MANAGEMENT_ENABLED=true
PAYMENT_COMPRESS_ON_UPLOAD=true
PAYMENT_COMPRESSION_QUALITY=70

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Error Reporting (for production monitoring)
# SENTRY_LARAVEL_DSN=your-sentry-dsn
# BUGSNAG_API_KEY=your-bugsnag-key

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# AWS Services (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================
# Only for development - set to false in production
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Cache Settings
CACHE_PREFIX="${APP_NAME}_cache"
VIEW_CACHE_PATH="${APP_NAME}_views"

# Queue Settings
QUEUE_FAILED_DRIVER=database-uuids

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATION_EMAIL=admin@your-domain.com

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Application Monitoring
HEALTH_CHECK_ENABLED=true
UPTIME_CHECK_URL="${APP_URL}/up"

# =============================================================================
# TIMEZONE & LOCALIZATION
# =============================================================================
APP_TIMEZONE=Africa/Cairo
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# =============================================================================
# SECURITY HEADERS
# =============================================================================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_DRIVER=file
MAINTENANCE_STORE=file